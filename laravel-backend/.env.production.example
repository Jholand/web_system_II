# ðŸš€ OPTIMIZED PRODUCTION ENVIRONMENT CONFIGURATION

APP_NAME="TravelQuest"
APP_ENV=production
APP_KEY=
APP_DEBUG=false  # CRITICAL: Always false in production
APP_URL=https://yourdomain.com

# Reduced bcrypt rounds for faster auth (still secure)
BCRYPT_ROUNDS=10

# Optimized logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=error  # Only log errors in production
LOG_DEPRECATIONS_CHANNEL=null

# Database - Use MySQL for production
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=traveller
DB_USERNAME=root
DB_PASSWORD=

# ðŸ”¥ CRITICAL: Use Redis for sessions, cache, and queue
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

CACHE_STORE=redis
CACHE_PREFIX=travelquest_

QUEUE_CONNECTION=redis

# Redis configuration
REDIS_CLIENT=phpredis  # Faster than predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SESSION_DB=3

# File system
FILESYSTEM_DISK=local

# Broadcasting
BROADCAST_CONNECTION=log

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@travelquest.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum
SANCTUM_STATEFUL_DOMAINS=yourdomain.com
SESSION_DOMAIN=.yourdomain.com

# Telescope (disable in production)
TELESCOPE_ENABLED=false

# Performance
OCTANE_SERVER=swoole  # If using Laravel Octane
